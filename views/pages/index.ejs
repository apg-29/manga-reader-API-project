      <option value="de" <%= lang === 'de' ? 'selected' : '' %>>German</option>
      <option value="ja" <%= lang === 'ja' ? 'selected' : '' %>>Japanese</option>
      <option value="ko" <%= lang === 'ko' ? 'selected' : '' %>>Korean</option>
      <option value="zh" <%= lang === 'zh' ? 'selected' : '' %>>Chinese</option>
      
